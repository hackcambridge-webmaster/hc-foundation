.touch-viewer, .touch-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.touch-container {
  dark-background();
}

.touch-instructions {
  font-weight: 100;
  font-size: 3em;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: $colorSecondary;
  user-select: none;
}
